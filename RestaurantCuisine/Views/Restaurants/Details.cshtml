@{
  Layout = "_Layout";
}

@model RestaurantsCuisines.Models.Restaurant;

<h2>Restaurant Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This restaurant does not contain any cuisines</p>
}
else
{
  <h4>Cuisines the restaurant contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Cuisine.Description</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to restaurants", "Index")</p>
<p>@Html.ActionLink("Edit Restaurant", "Edit", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Delete Restaurant", "Delete", new { id = Model.RestaurantId })</p>