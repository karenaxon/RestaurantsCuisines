@{
  Layout = "_Layout";
}

@using RestaurantCuisine.Models;
@model List<RestaurantCuisine.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisines have been prepared!</h3>
} 

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Description}", "Details", new { id = cuisine.CuisineId })</li>
}

